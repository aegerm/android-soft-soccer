<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_notify_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/id_img"
        android:padding="15dp"
        android:text="Carregando Nome Usuário..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="@font/nunito_semibold" />

    <TextView
        android:id="@+id/list_notify"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_notify_name"
        android:layout_below="@+id/list_notify_name"
        android:layout_marginTop="-20dp"
        android:padding="15dp"
        android:text="Carregando Notificações..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="@font/nunito_semibold" />

    <ImageView
        android:id="@+id/id_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/ic_person_black_24dp"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>